  "dependencies": {
    "@babel/node": "^7.16.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/runtime": "^7.17.9",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
