    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coverage": "^0.4.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
